.container {
  padding: 20rpx;
}

.userinfo-wrap {
  margin-top: 40rpx;
  width: 95%;
  height: 360rpx;
  background-color: #fff;
  border-radius: 25rpx;
  box-shadow: 5rpx 5rpx 8rpx 0rpx rgba(0, 0, 0, 0.1);
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo-avatar {
  position: absolute;
  top: -18rpx;
  left: 80rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-top: 20rpx;
  border: 5px solid #fff;
}
